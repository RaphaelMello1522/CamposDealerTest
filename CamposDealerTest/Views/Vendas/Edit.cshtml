@model CamposDealerTest.Models.Venda

@{
    ViewData["Title"] = "Editar Venda";
}

<h1>Editar Venda</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="IdVenda" />
            <div class="form-group">
                <label asp-for="ClienteId" class="control-label"></label>
                <input asp-for="ClienteId" class="form-control" />
                <span asp-validation-for="ClienteId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ProdutoId" class="control-label"></label>
                <input asp-for="ProdutoId" class="form-control" />
                <span asp-validation-for="ProdutoId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="QuantidadeVenda" class="control-label"></label>
                <input asp-for="QuantidadeVenda" class="form-control" />
                <span asp-validation-for="QuantidadeVenda" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ValorUnitarioVenda" class="control-label"></label>
                <input asp-for="ValorUnitarioVenda" class="form-control" />
                <span asp-validation-for="ValorUnitarioVenda" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DataHoraVenda" class="control-label"></label>
                <input asp-for="DataHoraVenda" class="form-control" />
                <span asp-validation-for="DataHoraVenda" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ValorTotalVenda" class="control-label"></label>
                <input asp-for="ValorTotalVenda" class="form-control" />
                <span asp-validation-for="ValorTotalVenda" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Voltar</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
