@model CamposDealerTest.Models.Venda

@{
    ViewData["Title"] = "Excluir Venda";
}

<h1>Excluir Venda</h1>

<h3>Você deseja realmente excluir esta venda?</h3>
<div>
    <h4>Venda</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Id Cliente
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ClienteId)
        </dd>
        <dt class = "col-sm-2">
            Id Produto
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ProdutoId)
        </dd>
        <dt class = "col-sm-2">
            Quantidade
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.QuantidadeVenda)
        </dd>
        <dt class = "col-sm-2">
            Valor Unitário
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ValorUnitarioVenda)
        </dd>
        <dt class = "col-sm-2">
            Data e Hora da Venda
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.DataHoraVenda)
        </dd>
        <dt class = "col-sm-2">
            Total
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ValorTotalVenda)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="IdVenda" />
        <input type="submit" value="Excluir" class="btn btn-danger" /> |
        <a asp-action="Index">Voltar</a>
    </form>
</div>
