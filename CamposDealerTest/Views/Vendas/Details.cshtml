@model CamposDealerTest.Models.Venda

@{
    ViewData["Title"] = "Detalhes da Venda";
}

<h1>Detalhes da Venda</h1>

<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Nome Cliente
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Cliente.Nome)
        </dd>
        <dt class = "col-sm-2">
            Descrição Produto
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Produto.Descricao)
        </dd>
        <dt class = "col-sm-2">
            Quantidade
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.QuantidadeVenda)
        </dd>
        <dt class = "col-sm-2">
            Valor Unitário
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ValorUnitarioVenda)
        </dd>
        <dt class = "col-sm-2">
            Data e Hora da Venda
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.DataHoraVenda)
        </dd>
        <dt class = "col-sm-2">
            Total
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ValorTotalVenda)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.IdVenda">Editar</a> |
    <a asp-action="Index">Voltar</a>
</div>
