@model CamposDealerTest.Models.Venda

@{
    ViewData["Title"] = "Nova Venda";
}

<h1>Nova Venda</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Cliente.Nome" class="control-label"></label>
                <select asp-for="ClienteId" class="form-control" asp-items="@ViewBag.ClienteId">
                    <option>Selecione</option>
                </select>
                <span asp-validation-for="Cliente.Nome" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Produto.Descricao" class="control-label"></label>
                <select asp-for="ProdutoId" class="form-control" asp-items="@ViewBag.ProdutoId">
                    <option>Selecione</option>
                </select>
                <span asp-validation-for="ProdutoId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Quantidade</label>
                <input asp-for="QuantidadeVenda" class="form-control" />
                <span asp-validation-for="QuantidadeVenda" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Valor Unitário</label>
                <input asp-for="ValorUnitarioVenda" class="form-control" />
                <span asp-validation-for="ValorUnitarioVenda" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label  class="control-label">Total</label>
            </div>
            <div class="form-group">
                <input type="submit" value="Criar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Voltar</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
